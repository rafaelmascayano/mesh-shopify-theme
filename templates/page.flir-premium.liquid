}

/* --- TARJETAS (CARDS) --- */
.product-card {
  background: var(--card-bg);
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
}

.product-content {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.12);
}

/* Imagen */
.product-image {
  position: relative;
  aspect-ratio: 16 / 10;
  overflow: hidden;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.product-card:hover .product-image img {
  transform: scale(1.05);
}

/* Badges */
.product-badge {
  position: absolute;
  top: 12px;
  right: 12px;
  background: var(--accent-color);
  color: #fff;
  padding: 4px 12px;
