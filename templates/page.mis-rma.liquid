    function showModal(item) {
      const modalOverlay = document.getElementById('modal-overlay');
      const modalContent = document.getElementById('modal-content');

      // Construir el contenido del modal
      // Observaciones

      
       let observacionesContent = `<h3>Tus Observaciones</h3><p style="white-space: pre-wrap; word-wrap: break-word;">${item.observaciones}</p><button class="button-primary agregar-comentario" data-numero="${item.numero}" data-rma-id="${item.id}">A√±adir Comentario</button>`;
