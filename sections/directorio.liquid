<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">

<style>
  .section-directorio-certificados {
    padding: 80px 0;
    font-family: 'Figtree', sans-serif;
    color: #616161;
    font-size: 16px;
    background-color: #f5f5f5;
  }
  .section-directorio-certificados .section-title {
    font-family: 'Inter', sans-serif;
    color: #000000;
    text-align: center;
    margin-bottom: 60px;
    font-weight: 400;
    font-size: 2.5rem;
  }
  .certificados-nivel {
    margin-bottom: 60px;
  }
  .certificados-nivel-title {
    font-family: 'Inter', sans-serif;
    color: #c51618;
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 30px;
    border-bottom: 1px solid #e8e8e8;
    padding-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .certificados-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
  }
  .certificados-item {
    background: #ffffff;
    border: 1px solid #e8e8e8;
    padding: 30px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    border-radius: 2px;
  }
  .certificados-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.06);
    border-color: #d1d1d1;
  }
  .certificados-item-nombre {
    font-weight: 700;
    color: #000000;
    margin: 0 0 8px 0;
    font-size: 1.1rem;
    line-height: 1.4;
  }
  .certificados-item-empresa {
    font-weight: 400;
    color: #616161;
    margin: 0;
    font-size: 1rem;
    line-height: 1.5;
  }
  @media screen and (max-width: 767px) {
    .section-directorio-certificados { padding: 50px 0; }
    .section-directorio-certificados .section-title { font-size: 1.8rem; }
    .certificados-grid { grid-template-columns: 1fr; gap: 20px; }
  }
</style>

<section class="section-directorio-certificados">
  <div class="container">
    {% if section.settings.title != blank %}
      <h1 class="section-title">{{ section.settings.title | escape }}</h1>
    {% endif %}

    <div class="certificados-list">
      {% comment %} NIVEL 1 {% endcomment %}
      {% if section.settings.show_nivel_1 %}
        <div class="certificados-nivel">
          <h2 class="certificados-nivel-title">{{ section.settings.nivel_1_title | escape }}</h2>
          <div class="certificados-grid">
            {% for block in section.blocks %}
              {% if block.settings.nivel == '1' %}
                <div class="certificados-item" {{ block.shopify_attributes }}>
                  <div class="certificados-item-info">
                    <p class="certificados-item-nombre">{{ block.settings.nombre | escape }}</p>
                    <p class="certificados-item-empresa">{{ block.settings.empresa | escape }}</p>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% comment %} NIVEL 2 {% endcomment %}
      {% if section.settings.show_nivel_1 %}
        <div class="certificados-nivel">
          <h2 class="certificados-nivel-title">{{ section.settings.nivel_2_title | escape }}</h2>
          <div class="certificados-grid">
            {% for block in section.blocks %}
              {% if block.settings.nivel == '2' %}
                <div class="certificados-item" {{ block.shopify_attributes }}>
                  <div class="certificados-item-info">
                    <p class="certificados-item-nombre">{{ block.settings.nombre | escape }}</p>
                    <p class="certificados-item-empresa">{{ block.settings.empresa | escape }}</p>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Search content"
}
{% endschema %}
