    {% endif %}
  </div>
</tech-support-{{ ai_gen_id }}>

<script>
  (function() {
    class TechSupport{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const form = this.querySelector('form');
        if (form) {
          form.addEventListener('submit', function(e) {
            const email = form.querySelector('input[type="email"]');
            const password = form.querySelector('input[type="password"]');
            
            if (!email.value || !password.value) {
              e.preventDefault();
            }
          });
        }
      }
    }

    customElements.define('tech-support-{{ ai_gen_id }}', TechSupport{{ ai_gen_id }});
  })();
</script>

