            type="email"
            name="customer[email]"
            id="CustomerEmail-{{ ai_gen_id }}"
            class="ai-tech-support-input-{{ ai_gen_id }}"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {% if form.errors %}
              aria-invalid="true"
            {% endif %}
            required
          >
        </div>

        <div class="ai-tech-support-field-{{ ai_gen_id }}">
          <label for="CustomerPassword-{{ ai_gen_id }}" class="ai-tech-support-label-{{ ai_gen_id }}">
            {{ block.settings.password_label }}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="CustomerPassword-{{ ai_gen_id }}"
            class="ai-tech-support-input-{{ ai_gen_id }}"
            autocomplete="current-password"
            {% if form.errors %}
              aria-invalid="true"
            {% endif %}
            required
          >
        </div>

